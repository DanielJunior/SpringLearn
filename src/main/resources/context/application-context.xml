<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:component-scan base-package="br.com.danieljunior.learn"/>
    
    <bean id="greetingController" class="br.com.danieljunior.learn.controllers.GreetingController">
        <property name="helloWorldService" ref="helloWorldServiceDefault"/>
        <property name="helloWorldServiceFrench" ref="helloWorldServiceImplFrench"/>
    </bean>
    <bean id="helloWorldServiceImplFrench" factory-bean="helloWorldFactory" factory-method="createHelloWorldService" primary="true">
            <constructor-arg value="fr"/>
    </bean>
    <bean id="helloWorldFactory" class="br.com.danieljunior.learn.services.HelloWorldFactory"/>
    <bean id="spanish" factory-bean="helloWorldFactory" factory-method="createHelloWorldService">
        <constructor-arg value="es"/>
    </bean>
    <beans profile="english">
        <bean id="helloWorldServiceDefault" factory-bean="helloWorldFactory" factory-method="createHelloWorldService" primary="true">
            <constructor-arg value="en"/>
        </bean>
    </beans>    
     <beans profile="spanish">
        <bean id="helloWorldServiceDefault" factory-bean="helloWorldFactory" factory-method="createHelloWorldService" primary="true">
            <constructor-arg value="es"/>
        </bean>
    </beans>   
</beans>
